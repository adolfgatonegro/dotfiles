#!/bin/sh
# gatoneg.ro
# Tiny fetch script with random cat facts taken from catfact.ninja

host=$(printf "\033[31m%s\033[0m%s" "$(cat /etc/hostname)")
kernel=$(printf "\033[32m%s\033[0m%s" "$(uname -r)")
packages=$(printf "\033[36m%s pkgs\033[0m%s" "$(pacman -Q | wc -l)")
uptime=$(printf "\033[33m%s\033[0m%s" "$(uptime -p | sed 's/up //')")

factsfile="$XDG_DATA_HOME/catfacts"
random_line=$((1 + $RANDOM % 332))
fact=$(printf "\033[37m%s\033[0m\n" "$(awk "NR==$random_line" $factsfile)" | fold -sw 80)

# cat <<EOF
#           /\\_/\\     ${host}
#      ____/ o o \\    ${kernel}
#    /~____  =Ã¸= /    ${packages}
#   (______)__m_m)    ${uptime}

# ${fact}
# EOF

# cat <<EOF
